@import "../../../common/wxss/index.wxss";

.head-box {
  position: relative;
  width: 100%;
  padding: 0 0 30rpx 0;
  box-sizing: border-box;
}

.item-one {
  width: 100%;
  position: relative;
  padding: 0 0 0 25rpx;
  height: 60rpx;
  box-sizing: border-box;
}
.one-right{
  float: right;
}
.item-two {
  width: 100%;
  margin-top: 40rpx;
  box-sizing: border-box;
  padding: 0 0 0 25rpx;
  font-weight: bold;
}

.left {
  float: left;
}

.right {
  float: right;
  margin-right: 140rpx;
}

.body-head-box-item {
  font-size: 35rpx;
  float: left;
  border-bottom: 5rpx solid blue;
  padding: 0 0 20rpx 0;
}

.three-right {
  font-size: 25rpx;
}

.box-right {
  margin-left: 70rpx;
  box-sizing: border-box;
}

.item-three {
  width: 100%;
  padding: 0 0 0 25rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.item-four {
  width: 100%;
  margin-top: 20rpx;
  box-sizing: border-box;
  border-bottom: 6rpx solid #f5f5f5;
  border-top: 2rpx solid #f5f5f5;
  padding: 40rpx 0 40rpx 25rpx;
  font-size: 30rpx;
}

.one-img {
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
  float: left;
  border: 3rpx #fff solid;
  position: absolute;
  top: -190%;
  left: 20rpx;
}

.item-btn {
  border: none;
  border-radius: 37rpx;
  background: blue;
  color: #fff;
  width: 218rpx;
  height: 64rpx;
  font-size: 30rpx;
  line-height: 56rpx;
  float: right;
  top: 20rpx;
  right: 24rpx;
}

.head-back {
  background: url('http://img.mp.itc.cn/upload/20170329/d2ab2d03d35040e5b3137ac807d33211_th.jpg') no-repeat;
  width: 100%;
  height: 350rpx;
  background-size: cover;
}

.personal-content {
  position: relative;
}

.body-top {
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx 20rpx 0 0;
  position: absolute;
  width: 100%;
  top: 90%;
  background: #fff;
}

.body-head-box {
  padding: 0 0 10rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 10rpx solid #f5f5f5;
}

.count-left {
  float: left;
}

.count-right {
  float: right;
}

.count {
  border-bottom: 10rpx solid #f5f5f5;
  font-size: 30rpx;
  padding: 20rpx;
  box-sizing: border-box;
}
.answer-item{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f5f5f5;
}
.answer-title{
  width: 100%;
  font-weight: bold;
}
.answer{
  width: 100%;
  font-size: 32rpx;
}
.answer-bottem{
  width: 100%;
  font-size: 30rpx;
}
